<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Providing cars for single mothers and needy families.</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles/styles.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/Site.css")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,500,900" />
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container navbar-container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar bdark-black"></span>
                    <span class="icon-bar bdark-black"></span>
                    <span class="icon-bar bdark-black"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img id="primary-logo" class="img-responsive" src="~/Content/img/Logo/Primary-Logo.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-page">@Html.ActionLink("Donate", "About", "Home")</li>
                    <li class="nav-page">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-page">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <div class="row">
          <div class="col-sm-5 text-center">
              <a href="@Url.Action("Index", "Home")">
                  <img id="footer-logo" src="~/Content/img/Logo/Primary-Logo-Reverse.png" />
              </a>
              <p>&copy; @DateTime.Now.Year Cars That Care Foundation. All Rights Reserved.</p>
          </div>
          <div id="footer-contact" class="col-sm-7 text-center">
              <div>
                  <a target="_blank" rel="noopener" href="https://www.facebook.com/Cars-That-Care-Foundation-180412452097247/">
                      <img class="footer-icon" src="~/Content/img/facebook-icon.png" />
                  </a>
                  <a href="@Url.Action("Contact", "Home")">
                      <img class="footer-icon" src="~/Content/img/email-icon.png" />
                  </a>
              </div>
              <div id="earl-quote">"A hand up, not just another hand out."</div>
          </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
